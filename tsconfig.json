{
  "compilerOptions": {
    "target": "ES2019",
    "module": "ESNext",
    "allowJs": true,
    "jsx": "preserve",
    "declaration": true,
    "declarationDir": "lib",
    "removeComments": false,
    "strict": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noEmit": true,
    "typeRoots": [
      "node_modules/@types",
    ],
    // "types": ["node"],
    "allowSyntheticDefaultImports": true, 
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
    }
  },
  "exclude": [
    "node_modules",
    "dist",
    "lib",
  ],
  "include": [
    "__tests__",
    "example",
    "src/**/*",
    "global.d.ts",
  ]
}
